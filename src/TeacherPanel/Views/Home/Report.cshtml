
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Classroom Monitor</title>
    <link rel="stylesheet" href="~/Content/semantic.min.css" />
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Content/semantic.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/moment-with-locales.min.js"></script>
    <style>
        .ui#content {
            padding-top: 20px;
            padding-bottom: 20px;
        }
    </style>
</head>
<body>

    <div id='content' class='ui main container'>
        <h1 class="ui center aligned header">Classroom Monitor - Alpha</h1>
        <div class="ui two column stackable grid">
            <div class="column">
                <h3 class="ui dividing header">
                    <i class="student icon"></i>
                    <div class="content">
                        Student Status
                    </div>
                </h3>
                <div class="ui two stackable doubling cards">
                    <div class="ui card">
                        <div class="image">
                            <img src="http://minisite-image.msxiaobing.com/ImageHost/Download/j5WITtvRFww">
                        </div>
                        <div class="content">
                            <div class="header">王洋洋</div>
                            <div class="description">
                                <div class="ui list">
                                    <div class="item">
                                        <i class="id card icon"></i>
                                        <div class="content">
                                            sheep_wong
                                        </div>
                                    </div>
                                    <div class="item">
                                        <i class="child icon"></i>
                                        <div class="content">
                                            男生
                                        </div>
                                    </div>
                                    <div class="item">
                                        <i class="marker icon"></i>
                                        <div class="content">
                                            呼和浩特实验小学5年级3班
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="ui extra content horizontal segments">
                            <div class="ui center aligned segment">
                                <div class="ui blue statistic">
                                    <div class="value" id="number-focus-index">
                                        --
                                    </div>
                                    <div class="label">
                                        注意力指数
                                    </div>
                                </div>
                            </div>
                            <div class="ui center aligned segment">
                                <div class="ui green statistic">
                                    <div class="value" id="number-handup-count">
                                        --
                                    </div>
                                    <div class="label">
                                        回答问题数
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="ui card">
                        <div class="image">
                            <img src="http://minisite-image.msxiaobing.com/ImageHost/Download/jCnbiSWu4fB">
                        </div>
                        <div class="content">
                            <a class="header">林萌萌</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column">
                <h3 class="ui dividing header">
                    <i class="announcement icon"></i>
                    <div class="content">
                        Notification
                    </div>
                </h3>
                <div id="notification-area">
                    <div id="template-notification" class="ui icon hidden message">
                        <i class="close icon"></i>
                        <div class="content">
                            <div class="header">
                            </div>
                            <p></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/main-panel.js"></script>
</body>
</html>
