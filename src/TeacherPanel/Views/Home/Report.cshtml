
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Classroom Monitor</title>
    <link rel="stylesheet" href="~/Content/semantic.min.css" />
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Content/semantic.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/moment-with-locales.min.js"></script>
    <style>
        .ui#content {
            padding-top: 40px;
            padding-bottom: 20px;
        }
    </style>
</head>
<body>

    <div id='content' class='ui main container'>
        <h1 class="ui center aligned header">AI Maker 小课堂</h1>
        <div class="ui two column stackable grid">
            <div class="column">
                <h3 class="ui dividing header">
                    <i class="student icon"></i>
                    <div class="content">
                        学生状态
                    </div>
                </h3>
                <div class="ui two stackable doubling cards">
                    <div class="ui card">
                        <div class="blurring dimmable image">
                            <div class="ui dimmer" id="offline-signal-area">
                                <div class="content center">
                                    <h2 class="ui header">已离开</h2>
                                </div>
                            </div>
                            <img src="http://minisite-image.msxiaobing.com/ImageHost/Download/uJABakKj5Cl">
                        </div>
                        <div class="content">
                            <div class="header">林喵喵</div>
                            <div class="description">
                                <div class="ui list">
                                    <div class="item">
                                        <i class="id card icon"></i>
                                        <div class="content">
                                            meow_lin
                                        </div>
                                    </div>
                                    <div class="item">
                                        <i class="child icon"></i>
                                        <div class="content">
                                            女生
                                        </div>
                                    </div>
                                    <div class="item">
                                        <i class="marker icon"></i>
                                        <div class="content">
                                            厦门市鼓浪屿人民小学 5年级A班
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="ui extra content horizontal segments">
                            <div class="ui center aligned segment">
                                <div class="ui blue statistic">
                                    <div class="value">
                                        --
                                    </div>
                                    <div class="label">
                                        专注度
                                    </div>
                                </div>
                            </div>
                            <div class="ui center aligned segment">
                                <div class="ui green statistic">
                                    <div class="value">
                                        --
                                    </div>
                                    <div class="label">
                                        活跃度
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="ui card">
                        <div class="blurring dimmable image">
                            <div class="ui inverted dimmer" id="handup-signal-area">
                                <div class="content center">
                                    <i class="hand paper icon massive pink"></i>
                                </div>
                            </div>
                            <img src="http://minisite-image.msxiaobing.com/ImageHost/Download/vzbTZWsX1V4">
                        </div>
                        <div class="content">
                            <div class="header">王洋洋</div>
                            <div class="description">
                                <div class="ui list">
                                    <div class="item">
                                        <i class="id card icon"></i>
                                        <div class="content">
                                            ocean_wong
                                        </div>
                                    </div>
                                    <div class="item">
                                        <i class="child icon"></i>
                                        <div class="content">
                                            男生
                                        </div>
                                    </div>
                                    <div class="item">
                                        <i class="marker icon"></i>
                                        <div class="content">
                                            呼和浩特市新华小学 5年级3班
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="ui extra content horizontal segments">
                            <div class="ui center aligned segment">
                                <div class="ui blue statistic">
                                    <div class="value" id="number-focus-index">
                                        --
                                    </div>
                                    <div class="label">
                                        专注度
                                    </div>
                                </div>
                            </div>
                            <div class="ui center aligned segment">
                                <div class="ui green statistic">
                                    <div class="value" id="number-handup-count">
                                        --
                                    </div>
                                    <div class="label">
                                        活跃度
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column">
                <h3 class="ui dividing header">
                    <i class="announcement icon"></i>
                    <div class="content">
                        实时通知
                    </div>
                </h3>
                <div id="notification-area">
                    <div id="template-notification" class="ui icon hidden message">
                        <i class="close icon"></i>
                        <div class="content">
                            <div class="header">
                            </div>
                            <p></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/main-panel.js"></script>
</body>
</html>
